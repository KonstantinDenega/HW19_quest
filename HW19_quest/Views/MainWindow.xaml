<Window x:Class="HW19_quest.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW19_quest.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Title="{Binding Title}">

    <Grid>
        <ContentControl prism:RegionManager.RegionName="MenuMainRegion"/>
        <ContentControl Margin="0,5,0,5" prism:RegionManager.RegionName="ModuleRegion"/>
        <ContentControl Margin="0,5,0,0" prism:RegionManager.RegionName="StatusRegion"/>
    </Grid>
</Window>
